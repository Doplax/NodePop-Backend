<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title><%= __("Digital Products Inc - Innovate with Us") %></title>
        <!--<link rel="icon" type="image/x-icon" href="assets/favicon.ico" />-->
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="styles/styles.css" rel="stylesheet" />
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
            <div class="container px-4">
                <a class="navbar-brand" href="#page-top"><%= __("Digital Products Inc") %></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto">
                        <% getLocales().forEach(locale => { %>
                            <a href="/change-locale/<%= locale %>"><%= locale %></a> &nbsp;
                          <% }) %>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#about"><%= __("About Us") %></a></li>
                        <li class="nav-item"><a class="nav-link" href="#services"><%= __("Our Services") %></a></li>
                        <li class="nav-item"><a class="nav-link" href="#contact"><%= __("Get in Touch") %></a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Header-->
        <header class="bg-primary bg-gradient text-white">
            <div class="container px-4 text-center">
                <h1 class="fw-bolder"><%= __("Welcome to Digital Products Inc") %></h1>
                <p class="lead"><%= __("Leading the digital revolution with innovative solutions") %></p>
                <a class="btn btn-lg btn-light" href="#about"><%= __("Discover More") %></a>
            </div>
        </header>
        <!-- About section-->
        <section id="about">
            <div class="container px-4">
                <div class="row gx-4 justify-content-center">
                    <div class="col-lg-8">
                        <h2><%= __("About Us") %></h2>
                        <p class="lead"><%= __("Digital Products Inc is your partner in digital transformation. We specialize in creating cutting-edge software and digital solutions to help your business thrive in the digital era. Our team is dedicated to innovation, quality, and your success.") %></p>
                        <ul>
                            <li><%= __("Expertise in software development and digital strategy") %></li>
                            <li><%= __("Committed to delivering exceptional digital experiences") %></li>
                            <li><%= __("Proven track record in driving digital innovation") %></li>
                            <li><%= __("Flexible and customer-focused approach") %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- Services section-->
        <section class="bg-light" id="services">
            <div class="container px-4">
                <div class="row gx-4 justify-content-center">
                    <div class="col-lg-8">
                        <h2><%= __("Our Services") %></h2>
                        <p class="lead"><%= __("From bespoke software development to digital marketing strategies, Digital Products Inc offers a range of services designed to help your business succeed online. Our services include Web & Mobile App Development, SEO & Digital Marketing, Cloud Solutions, and E-commerce Platforms.") %></p>
                    </div>
                </div>
            </div>
        </section>
        <!-- Contact section-->
        <section id="contact">
            <div class="container px-4">
                <div class="row gx-4 justify-content-center">
                    <div class="col-lg-8">
                        <h2><%= __("Get in Touch") %></h2>
                        <p class="lead"><%= __("Ready to start your digital journey or have a question about our services? Contact Digital Products Inc today and let us help you achieve your digital aspirations.") %></p>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container px-4"><p class="m-0 text-center text-white"><%= __("Copyright &copy; Digital Products Inc 2023") %></p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
    </body>
</html>
