{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",            // <-- esto es clave
    "paths": {
      "@/*": ["*"]                 // <-- alias principal
    }
  },
  "include": [
    "index.ts",
    "src/**/*"
, "index.route.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
