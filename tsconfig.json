{
  "compilerOptions": {
    "outDir": "./dist",            
    "rootDir": ".",                
    "module": "commonjs",
    "target": "ES2017",
    "allowJs": true,               
    "checkJs": false,              
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "micro-services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",                        
    "**/*.test.ts"
  ]
}